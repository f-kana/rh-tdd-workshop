root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
# flake8, black, djlint, editorconfigで設定が重複しているので注意(全て120で統一はしている。)
max_line_length = 120


[*.py]
indent_style = space
indent_size = 4

[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.yml, *.yaml]
indent_style = space
indent_size = 2
