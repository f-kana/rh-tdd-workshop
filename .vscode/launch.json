{
  "configurations": [
    
    {
      "name": "vscode-jest-tests",
      "type": "node",
      "request": "launch",
      "env": {
        "NODE_OPTIONS": "--experimental-vm-modules"
      },
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Python: unittest",
      "type": "python",
      "request": "launch",
      "module": "unittest",
      "args": ["discover"],
      "justMyCode": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}